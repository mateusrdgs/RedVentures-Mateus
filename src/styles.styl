@import 'variables'

*::before, *, *::after
  box-sizing border-box

html, body
  height 100%
  overflow auto
  width 100%

.button
  background-color transparent
  border .15rem solid $secondary-grey
  border-radius 2rem
  color $secondary-grey
  font 700 .9rem 'Heebo', sans-serif
  height 3.125rem
  outline none
  width 11.25rem

.button.primary
  border-color $primary-orange
  color $primary-orange
  transition $hover-transition
  &:hover
    background-color $primary-orange
    color $primary-white
    cursor pointer

.button.info
  border-color $primary-green
  color $primary-green
  transition $hover-transition
  &:hover
    background-color $primary-green
    color $primary-white
    cursor pointer






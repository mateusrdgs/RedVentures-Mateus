@import 'variables'

:host
  display flex
  // height 31.25rem
  width 100%
  // max-height 31.5rem
  max-width 52.5rem
  margin-top -8rem

.calendar-container
  background-color $primary-white
  border-radius .3rem
  display flex
  flex-direction column
  height 100%
  width 100%

.calendar-container__title
  font 400 1.5rem 'Montserrat', sans-serif
  margin 3rem 1rem 1rem 1rem
  text-align center

.calendar-container__content
  align-items center
  display flex
  flex 1
  flex-direction column
  justify-content center
  padding 1rem

@media screen and (min-width: 37.5rem)
  .calendar-container__content
    flex-direction row
    justify-content space-around

:host
  align-items center
  display flex
  flex-direction column
  padding 2rem 0
  max-width 80rem
  width 100%

.results-container__title
  color #000
  font 400 1.4rem 'Montserrat', sans-serif

.results-container__components
  align-items center
  display flex
  flex-direction column
  width 100%

@media screen and (min-width 81.25rem)
  .results-container__components
    align-items flex-start
    justify-content space-around
    flex-direction row

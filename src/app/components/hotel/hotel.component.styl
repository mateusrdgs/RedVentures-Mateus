@import 'variables'

:host
  border-radius 0.3rem
  box-shadow 0 0 1rem $secondary-grey
  display flex
  flex-direction column
  justify-content space-around
  max-width 52.5rem
  position relative
  width 100%

.hotel-item__flipper
  display flex
  flex-direction column
  width 100%

.hotel-item__data,
.hotel-item__price
  align-items center
  display flex
  flex-direction column

.hotel-item__data
  border-bottom .1rem solid #D8D8D8
  margin -3rem 1rem 0 1rem
  padding 0 0 1rem 0

.hotel-item__data__image
  width 100%
  max-width 16rem

.hotel-item__data__content
  display flex
  align-items center
  flex-direction column
  max-width 25.2rem

.hotel-item__data__content__title
  color $primary-orange
  font 700 1rem 'Heebo', sans-serif
  text-transform uppercase

.hotel-item__data__content__description
  color $secondary-grey
  font 500 1rem 'Heebo', sans-serif

.hotel-item__price
  align-items flex-start
  padding 1rem

.hotel-item__price__label
  color $secondary-grey
  font 100 1rem 'Heebo', sans-serif

.hotel-item__price__value
  color $primary-green
  font 700 2rem 'Montserrat', sans-serif

.hotel-item__data__content__buttons
  align-items center
  display flex
  flex-direction column
  width 100%

.button
  margin 1rem 0 0 0

@media screen and (min-width 28.5rem)
  :host
    margin 0

  .hotel-item__data__content__buttons
    align-items center
    flex-direction row
    justify-content space-around
    padding 1rem 0

@media screen and (min-width 37.5rem)
  .hotel-item__data
    margin-top 0
    flex-direction row
    padding-bottom 0

  .hotel-item__data__content
    padding-left 1rem

  .hotel-item__data__content__buttons
    flex-direction column

@media screen and (min-width 48rem)
  :host
    flex-direction row

  .hotel-item__data
    border-bottom 0
    border-right 0.1rem solid #D8D8D8
    flex-direction row
    margin 1rem 0 1rem 1rem
    padding 0

  .hotel-item__data__content
    padding 0 1rem
    margin 0 2rem
    align-items flex-start

  .hotel-item__price
    align-items flex-end
    justify-content center

  .hotel-item__data__content__buttons
    flex-direction column

@media screen and (min-width 60rem)
  .hotel-item__data__content__buttons
    flex-direction row

  .hotel-item__data
    margin-left -3rem

  .button
    margin 0
    &:first-child
      margin-right 1rem

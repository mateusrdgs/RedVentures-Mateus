@import 'variables'

:host
  display flex
  flex-direction column
  max-width 16rem
  width 100%
  transition $resize-transition

.calendar
  display flex
  flex-direction column
  height 100%
  width 100%

.calendar__head,
.calendar__body
  display flex
  flex-direction column

.calendar__head,
.calendar__body
  flex 1 0 auto

.calendar__head
  border-top .1rem solid #E3E3E3
  border-bottom .1rem solid #E3E3E3

.calendar__head__row,
.calendar__body__row
  display flex

.calendar__head__row
  padding .5rem 0
  &:first-child
    justify-content center
    & > *
      color $primary-grey
      font 400 1rem 'Heebo', sans-serif
  &:nth-child(2)
    justify-content space-around
    & > *
      color $secondary-grey
      font 400 1rem 'Heebo', sans-serif

.calendar__body__row
  justify-content space-around
  padding-top .5rem

.calendar__body__row__data
  align-items center
  border-radius 50%
  display flex
  flex 1
  color $calendar-border
  font 400 1rem 'Heebo', sans-serif
  justify-content center
  height 2.5rem
  width 2.5rem
  transition $hover-transition
  &:hover
    background-color $primary-green
    cursor pointer
    & .calendar__body__row__data__day
      color $primary-white

.calendar__body__row__data__day
  display flex
  align-items center
  justify-content center
  height 100%
  transition $hover-transition
  width 100%

.currentMonth
  & .calendar__body__row__data__day
    color $primary-grey

.picked, .range
  background-color $primary-green

.picked
  background-color $primary-green
  &:hover
    & .calendar__body__row__data__day
      border .09rem solid $primary-green
      background-color $primary-white
      border-radius 50%
      color $primary-green
  & .calendar__body__row__data__day
    color $primary-white

.range
  border-radius 0
  &:hover .calendar__body__row__data__day
    border .09rem solid $primary-green
    background-color $primary-white
    border-radius 50%
    color $primary-green
  & .calendar__body__row__data__day
    color $primary-white

.range-start
  border-top-left-radius 50%
  border-bottom-left-radius 50%

.range-end
  border-top-right-radius 50%
  border-bottom-right-radius 50%

@media screen and (min-width: 37.5rem)
  :host
    max-width 17.5rem
    width 100%
    order 2

  .calendar__body__row__data
    min-height 2.5rem
    min-width 2.5rem

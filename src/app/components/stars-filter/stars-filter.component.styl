@import 'variables'

:host
  display flex
  flex-direction column
  height 4.5rem
  max-width 12.5rem
  width 100%

.stars__filter__label
  color $secondary-grey
  font 400 1rem 'Heebo', sans-serif

.stars-filter__list
  align-items flex-end
  display flex
  height 100%
  justify-content space-between
  list-style none
  margin 0
  padding 0
  width 100%

.stars-filter__list__item
  display flex
  height 100%
  max-height 2rem
  max-width 2.2rem
  width 100%

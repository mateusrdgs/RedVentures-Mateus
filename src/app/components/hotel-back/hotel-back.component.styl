@import 'variables'

:host
  display flex
  flex-direction column
  width 100%

.hotel-item__flipper__back__header
  padding-top .5rem
  display flex
  justify-content space-between

.hotel-item__flipper__back__header__back
  align-items center
  display flex
  justify-content flex-end
  transition $hover-transition
  &:hover
    transform translateX(-.4rem)
    cursor pointer

.hotel-item__flipper__back__header__title
  color $primary-orange
  font 700 1rem 'Heebo', sans-serif
  text-transform uppercase

.hotel-item__flipper__back__header__back__text
  color $primary-grey
  font 400 .8rem 'Heebo', sans-serif

.hotel-item__flipper__back__price-history
  display flex
  flex-direction row
  justify-content space-around
  list-style none
  margin 0
  height 10rem
  padding 0

.hotel-item__flipper__back__price-history__item
  align-items center
  flex 1
  display flex
  flex-direction column
  position relative
  width 2rem

.hotel-item__flipper__back__price-history__item__month
  color $secondary-grey
  font 400 .8rem 'Heebo', sans-serif
  margin-top auto

@media screen and (min-width 37.5rem)
  :host
    padding 1rem

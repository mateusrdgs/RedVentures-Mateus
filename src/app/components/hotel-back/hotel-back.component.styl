@import 'variables'

:host
  backface-visibility hidden
  display flex
  flex-direction column
  height 100%
  left 0
  position absolute
  justify-content space-between
  top 0
  transform rotateY(-180deg)
  width 100%

.hotel-item__flipper__back__header
  padding-top .5rem
  display flex
  justify-content space-between

.hotel-item__flipper__back__header__back
  align-items center
  display flex
  justify-content flex-end
  transition $hover-transition
  &:hover
    transform translateX(-.4rem)
    cursor pointer

.hotel-item__flipper__back__header__title
  color $primary-orange
  font 700 1rem 'Heebo', sans-serif
  text-transform uppercase

.hotel-item__flipper__back__header__back__text
  color $primary-grey
  font 400 .8rem 'Heebo', sans-serif

.hotel-item__flipper__back__price-history
  display flex
  flex-direction row
  justify-content space-around
  list-style none
  margin 0
  height 100%
  padding 0

.hotel-item__flipper__back__price-history__item
  align-items center
  display flex
  flex-direction column
  height 100%
  justify-content space-between
  position relative
  width 100%

.hotel-item__flipper__back__price-history__item__month
  color $secondary-grey
  font 400 .8rem 'Heebo', sans-serif
  margin-top .5rem


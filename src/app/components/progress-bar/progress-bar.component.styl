@import 'variables'

:host
  display flex
  background-color transparent
  flex-direction column-reverse
  height 75%
  width 50%

.progress__value
  background linear-gradient(45deg, #EE6F48, #F98100)
  border-radius .2rem
  height 0
  opacity .7
  transition $hover-transition
  width 100%
  &:hover
    opacity 1


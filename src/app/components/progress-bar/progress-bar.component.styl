@import 'variables'

:host
  align-items center
  display flex
  background-color transparent
  flex-direction column-reverse
  height 75%
  margin-top auto
  position relative
  width 50%

.progress__value
  background linear-gradient(45deg, #EE6F48, #F98100)
  border-radius .2rem
  height 0
  opacity .7
  transition $hover-transition
  width 100%
  &:hover
    opacity 1
    & + .hotel-item__flipper__back__price-history__item__tooltip
      opacity 1
      overflow visible
      padding .5rem
      transform translateY(0)

.hotel-item__flipper__back__price-history__item__tooltip
  align-items center
  border-radius .2rem
  display flex
  justify-content center
  background-color $secondary-black
  color $primary-white
  font 400 1rem 'Heebo', sans-serif
  opacity 0
  position absolute
  top 0
  transition $hover-transition
  transform translateY(-1rem)
  z-index 100
  &::after
    border-left .4rem solid transparent
    border-right .4rem solid transparent
    border-top .5rem solid $secondary-black
    content ''
    height 0
    left 50%
    transform translateX(-50%)
    position absolute
    top 100%
    width 0

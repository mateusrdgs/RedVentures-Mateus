@import "variables"

:host, .navigation, .navigation__list
  display flex
  width 100%

.navigation__list
  align-items flex-end
  flex-direction column
  list-style none
  margin 0
  padding 1rem 1.5rem

.navigation__list__item
  display flex
  margin .5rem 0

.navigation__list__item__link
  border .1rem solid transparent
  color $primary-white
  text-decoration none
  font 400 1rem 'Heebo', sans-serif
  padding .5rem
  transition $hover-transition
  &:hover
    border-color $primary-white
    transform scale(1.1)
  &:visited
    color $primary-white


@media screen and (min-width: 37.5rem)
  .navigation__list
    flex-direction row
    padding 2rem 2.5rem

  .navigation__list__item
    padding 0 3rem 0 0

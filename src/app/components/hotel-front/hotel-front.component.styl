@import 'variables'

:host
  align-items center
  backface-visibility hidden
  display flex
  flex-direction column
  height 100%
  transform rotateY(0)
  width 100%

.hotel-item__flip-container__front
  align-items center
  display flex
  flex-direction column
  justify-content space-between
  height 100%
  width 100%

.hotel-item__flip-container__front__name
  font 700 1.2rem 'Heebo', sans-serif
  color $primary-orange
  text-align center
  text-transform uppercase

.hotel-item__flip-container__front__description
  font 400 1rem 'Heebo', sans-serif
  color $secondary-grey

.hotel-item__flip-container__front__buttons
  display flex
  flex-direction column
  align-items center
  margin 1rem 0
  width 100%

.primary
  margin-bottom 1rem

@media screen and (min-width 26.5rem)
  .hotel-item__flip-container__front__buttons
    flex-direction row
    justify-content space-around

  .primary
    margin-bottom 0

@media screen and (min-width 37.5rem)
  .hotel-item__flipper__front__container
    flex-direction row
    height 100%
    min-height 16rem
    padding-bottom 1rem

  .hotel-item__flip-container__front__name
    align-self flex-start
    text-align left

  .hotel-item__flip-container__front__buttons
    flex-direction column

  .primary
    margin-bottom 1rem

@media screen and (min-width 44rem)
  .hotel-item__flip-container__front__buttons
    flex-direction row

  .primary
    margin-bottom 0

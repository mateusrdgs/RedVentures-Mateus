:host
  display flex
  max-width 56rem
  width 100%

.hotels
  display flex
  flex-direction column
  list-style none
  margin 0
  padding 0
  width 100%

.hotels__item
  display flex
  justify-content center
  padding 5rem 0 0 0
  width 100%
  &:first-child
    padding-top 3rem

.hotels__item__warning
  font 400 2rem 'Montserrat', sans-serif

@media screen and (min-width 37.5rem)
  .hotels__item
    padding-top 2rem
    &:first-child
      padding-top 0

@media screen and (min-width 81.25rem)
  .hotels__item
    &:first-child
      margin-top 2rem
